<% provide(:title, "Create an event") %>
<h1>Create a new event</h1>

<div>
  <%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
      <div>
        <div>
          The form contains <%= pluralize(@event.errors.count, "error") %>.
        </div>
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <%= hidden_field_tag :creator_id, current_user.id %>

    <%= f.label :date %>
    <%= f.datetime_select :date %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit "Create my event" %>
  <% end %>
</div>