<h1>Create a new event</h1>

<div>
  <%= form_for(@event) do |f| %>
    
    <%= hidden_field_tag :creator_id, current_user.id %>

    <%= f.label :date %>
    <%= f.datetime_select :date %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit "Create my event" %>
  <% end %>
</div>